{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://abelara.com/schemas/base/kpi.json",
  "title": "KPI Schema",
  "description": "Schema for KPI information",

  "type": "object",
  "additionalProperties": false,
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the KPI event"
    },
    "value": {
      "type": "number",
      "minimum": 0,
      "description": "KPI value"
    },
    "unit": {
      "type": "string",
      "description": "Unit of measure"
    },
    "type": {
      "type": "object",
      "required": ["id", "name", "description"],
      "properties": {
        "id": {
          "type": "number",
          "minimum": 1,
          "description": "KPI type identifier"
        },
        "name": {
          "type": "string",
          "description": "KPI type name"
        },
        "description": {
          "type": "string",
          "description": "KPI type description"
        }
      }
    },
    "product": {
      "type": "object",
      "description": "Product information",
      "required": ["id", "name", "family"],
      "properties": {
        "id": {
          "type": "number",
          "minimum": 1,
          "description": "Product identifier"
        },
        "name": {
          "type": "string",
          "description": "Product name"
        },
        "description": {
          "type": "string",
          "description": "Product description"
        },
        "family": {
          "type": "object",
          "required": ["id", "name"],
          "properties": {
            "id": {
              "type": "number",
              "minimum": 1,
              "description": "Product family identifier"
            },
            "name": {
              "type": "string",
              "description": "Product family name"
            },
            "description": {
              "type": "string",
              "description": "Product family description"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "required": ["source", "uri", "asset"],
      "properties": {
        "source": {
          "type": "string",
          "description": "Source system or service that generated the KPI"
        },
        "uri": {
          "type": "string",
          "description": "Data source path for the KPI"
        },
        "asset": {
          "type": "object",
          "required": ["id", "name"],
          "properties": {
            "id": {
              "type": "number",
              "description": "Asset identifier"
            },
            "name": {
              "type": "string",
              "description": "Asset name"
            }
          }
        },
        "additionalInfo": {
          "type": "object",
          "description": "Additional edge-driven metadata",
          "additionalProperties": true
        }
      }
    }
  },
  "required": ["timestamp", "value", "unit", "type", "metadata"]
}
