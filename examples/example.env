# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_BROKER_USERNAME=your_username
MQTT_BROKER_PASSWORD=your_password
MQTT_CLIENT_ID=uns-payload-example
MQTT_KEEPALIVE=60
MQTT_QOS=1

# MQTT Topic Configuration
MQTT_BASE_TOPIC=abelara/plant1/utilities/water-system/pump-station/pump-101
MQTT_TOPIC_PREFIX=abelara

# Asset Configuration
ASSET_ID=101
ASSET_NAME=Pump-101
ASSET_DESCRIPTION=Centrifugal water pump for cooling system

# Publisher Configuration
PUBLISH_INTERVAL=5
SIMULATION_MODE=true
LOG_LEVEL=INFO

# Optional: TLS/SSL Configuration
MQTT_USE_TLS=false
MQTT_CA_CERT_PATH=path/to/ca.crt
MQTT_CLIENT_CERT_PATH=path/to/client.crt
MQTT_CLIENT_KEY_PATH=path/to/client.key

# Optional: Authentication
MQTT_USE_AUTH=false
