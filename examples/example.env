# MQTT Broker Configuration
MQTT_BROKER_HOST=cesmii-mqtt-broker.eastus-1.eventgrid.azure.net
MQTT_BROKER_PORT=1883
MQTT_BROKER_USERNAME=your_username
MQTT_BROKER_PASSWORD=your_password
MQTT_CLIENT_ID=uns-payload-example
MQTT_KEEPALIVE=60
MQTT_QOS=1

# MQTT Topic Configuration
MQTT_TOPIC_ENTERPRISE=abelara
MQTT_TOPIC_SITE=plant1
MQTT_TOPIC_AREA=utilities
MQTT_TOPIC_LINE=water-system
MQTT_TOPIC_CELL=pump-station

# Publisher Configuration
PUBLISH_INTERVAL=5
SIMULATION_MODE=true
LOG_LEVEL=INFO

# Optional: TLS/SSL Configuration
MQTT_USE_TLS=false
MQTT_CA_CERT_PATH=path/to/ca.crt
MQTT_CLIENT_CERT_PATH=path/to/client.crt
MQTT_CLIENT_KEY_PATH=path/to/client.key

# Optional: Authentication
MQTT_USE_AUTH=false
